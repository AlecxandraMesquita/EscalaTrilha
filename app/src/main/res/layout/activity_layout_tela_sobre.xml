<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_purple"
    tools:context=".LayoutTelaSobre">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/layoutTelaSobreTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Sobre"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.331"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- android:text="O Sistema foi desenvolvido com o intuito de demonstrar as tecnicas utilizadas na disciplina de Dispositivos Moveis ministrada pelo professor Silvano, e contribuir com equipes que trabalham em regime de escala facilitando assim a consulta das escalas em um determinado perÃ­odo. Academica: Alecxandra Mesquita" -->

        <Button
            android:id="@+id/layoutTelaSobreVoltar"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:onClick="voltar"
            android:text="Voltar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/layoutTelaSobreImagemSobre"
            android:layout_width="wrap_content"
            android:layout_height="429dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutTelaSobreTitulo"
            app:srcCompat="@drawable/sobre"
            tools:layout_editor_absoluteX="0dp" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>